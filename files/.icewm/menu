# --- Javelin OS: IceWM Menu ---

# Dynamic menu generated from .desktop files
menufile "Applications" /usr/bin/icewm-menu-fdo

# Our custom, curated settings menu
menu "System Settings" folder {
    prog "Appearance" /usr/share/icons/Papirus/32x32/apps/preferences-desktop-theme.svg lxappearance
    prog "Display Settings" /usr/share/icons/Papirus/32x32/apps/preferences-desktop-display.svg arandr
    prog "Audio Mixer" /usr/share/icons/Papirus/32x32/apps/multimedia-volume-control.svg pavucontrol
    prog "Bluetooth Manager" /usr/share/icons/Papirus/32x32/apps/bluetooth.svg blueman-manager
    prog "Firewall Status" /usr/share/icons/Papirus/32x32/apps/preferences-system-firewall.svg gufw
    prog "System Backups" /usr/share/icons/Papirus/32x32/apps/timeshift.svg timeshift-gtk
}
separator

# System actions, now neatly in their own submenu
menu "System Actions" folder {
    prog "Lock Screen" /usr/share/icons/Papirus/32x32/actions/system-lock-screen.svg betterlockscreen -l
    separator
    prog "Logout" /usr/share/icons/Papirus/32x32/actions/system-log-out.svg icewm-logout
    prog "Reboot" /usr/share/icons/Papirus/32x32/actions/system-reboot.svg /sbin/reboot
    prog "Shutdown" /usr/share/icons/Papirus/32x32/actions/system-shutdown.svg /sbin/shutdown -h now
}
